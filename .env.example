# Agent Configuration
AGENT_NAME=Consiglio
AGENT_VERSION=1.0.0
LOG_LEVEL=INFO

# Security Settings
ALLOW_SHELL=false
ALLOW_BROWSER_CONTROL=false
ALLOW_FILE_WRITE=false
ALLOW_SYSTEM_CONTROL=false

# Rate Limiting
MAX_WEB_REQUESTS_PER_MINUTE=30
MAX_FILE_OPERATIONS_PER_MINUTE=100
MAX_SHELL_COMMANDS_PER_SESSION=5

# LLM Providers (set your API keys)
GOOGLE_API_KEY=your_google_api_key_here
OPENAI_API_KEY=your_openai_api_key_here
OPENROUTER_API_KEY=your_openrouter_api_key_here

# Vector Store
VECTOR_DB_PATH=./data/vectorstore
EMBEDDING_MODEL=all-MiniLM-L6-v2
CHUNK_SIZE=512
CHUNK_OVERLAP=50

# Memory Settings
MAX_CONVERSATION_TOKENS=4000
MEMORY_TTL_DAYS=30
MAX_MEMORY_VECTORS=10000

# Web Security
ALLOWED_DOMAINS=example.com,github.com,stackoverflow.com
BLOCKED_DOMAINS=malware.com,phishing.com
REQUEST_TIMEOUT_SECONDS=30

# File System Security
ALLOWED_READ_PATHS=./work,./data,./docs
ALLOWED_WRITE_PATHS=./work,./logs
BLOCKED_PATHS=/etc,/var,/usr/bin,/bin

# Audit and Logging
AUDIT_LOG_PATH=./logs/audit.log
USER_APPROVAL_REQUIRED=true
DRY_RUN_MODE=false

# UI Settings
WEB_UI_PORT=8000
WEB_UI_HOST=127.0.0.1
ENABLE_HTTPS=false